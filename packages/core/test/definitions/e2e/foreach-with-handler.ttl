@base <http://example.org/pipeline/> .
@prefix code: <https://code.described.at/> .
@prefix p: <https://pipeline.described.at/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .

<> a p:Pipeline, p:Readable ;
  p:steps [
    p:stepList ( <iterateDirectory> <printLength> )
  ] .

<iterateDirectory> a p:Step ;
  code:implementedBy [
    code:link <file:support/operations/iterateDirectory> ;
    a code:EcmaScript
  ] ;
  code:arguments (
    "definitions/e2e"
  ).

<printLength> a p:Step ;
  code:implementedBy [
    code:link <file:..#forEach> ;
    a code:EcmaScript
  ];
  code:arguments (
    <Print>
    "(p, chunk) => p.variables.set('file', chunk)"^^code:EcmaScript
  ).

<Print> a p:Pipeline, p:ReadableObjectMode ;
  p:steps [
    p:stepList ( <readFile> <getLength> )
  ] .

<readFile> a p:Step ;
  code:implementedBy [
    code:link <node:fs#createReadStream> ;
    a code:EcmaScript
  ] ;
  code:arguments (
    "file"^^p:VariableName
  ).

<getLength> a p:Step ;
  code:implementedBy [
    code:link <file:support/operations/inlineTransform> ;
    a code:EcmaScript
  ] ;
  code:arguments (
    "_ => this.variables.get('file')"^^code:EcmaScript
  ) .
